void _CW_EnsureIntSize4(void) {
	static char var[sizeof(int) == 4 ? 1 : -1];
	(void)var;
}

typedef struct _CW_Node {
	cw_c32 low;
	cw_c32 high;
} _CW_Node;
{% for version in versions %}

#if CW_ENABLE_{{ version | VersionV }} == 1
#include "{{ version }}/c90.h"
#endif
{% endfor %}

#if defined(_MSC_VER)
    #define UNUSED __declspec(unused)
#else
    #define UNUSED __attribute__((unused))
#endif

static CW_Version _cw_version = CW_V_None;

UNUSED static void CW_SetVersion(CW_Version version) {
	_cw_version = version;
}

UNUSED static int CW_SetAmbiguousWidth(int w) {
	switch (_cw_version) {
{% for version in versions %}
#if CW_ENABLE_{{ version | VersionV }} == 1
	case CW_V_{{ version | VersionV }}: return _CW_{{ version | VersionV }}_SetAmbiguousWidth(w), 0;
#endif

{% endfor %}
	default: return -1;
	}
}

UNUSED static int CW_CharWidth(cw_c32 c) {
	switch (_cw_version) {
{% for version in versions %}
#if CW_ENABLE_{{ version | VersionV }} == 1
	case CW_V_{{ version | VersionV }}: return _CW_{{ version | VersionV }}_CharWidth(c);
#endif

{% endfor %}
	default: return -1;
	}
}
